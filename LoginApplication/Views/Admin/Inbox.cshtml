@model List<LoginApplication.Models.ViewModels.UserRequestDTO>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h4>Inbox Page</h4>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date</th>
            <th>Detail</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.RequestDate</td>
            <td>
                <a asp-controller="Admin" asp-action="InboxDetail" asp-route-id="@item.ClaimId" class="btn btn-warning">Detail</a>
            </td>
            

        </tr>
    }
</table>
<div>
    <a asp-action="Index">| Back to Home</a>
</div>
